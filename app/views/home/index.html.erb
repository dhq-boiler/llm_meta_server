<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h1 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
      LLM API Call Meta Server
    </h1>
    <p class="mt-2 text-center text-sm text-gray-600">
      A platform for securely managing various LLM API keys
    </p>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <div class="space-y-6">
        <div class="text-center">
          <p class="text-gray-600 mb-6">
            Sign in and start managing your LLM models.
          </p>

          <%= form_with url: user_google_oauth2_omniauth_authorize_path, method: :post, local: true, class: "w-full", data: { turbo: false } do |form| %>
            <%= form.button type: "submit",
                            class: "w-full flex justify-center items-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
              <i class="fa-brands fa-google mr-2"></i>
              Sign in with Google
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
