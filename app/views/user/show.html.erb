<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <% if user_signed_in? %>
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- プロフィール情報 -->
      <div class="lg:col-span-2 space-y-6">
        <!-- プロフィールカード -->
        <div class="bg-white shadow-md rounded-lg overflow-hidden">
          <div class="px-6 py-4 bg-gray-50 border-b border-gray-200 flex justify-between items-center">
            <h4 class="text-lg font-semibold text-gray-900">プロフィール</h4>
            <%#= link_to "編集", edit_user_profile_path, class: "text-sm bg-blue-100 text-blue-700 px-3 py-1 rounded-md hover:bg-blue-200 transition-colors" %>
          </div>
          <div class="px-6 py-4 space-y-4">
            <div class="flex">
              <div class="w-1/3">
                <span class="font-medium text-gray-700">メールアドレス:</span>
              </div>
              <div class="w-2/3">
                <span class="text-gray-900"><%= @user.email %></span>
              </div>
            </div>
            <div class="flex">
              <div class="w-1/3">
                <span class="font-medium text-gray-700">認証プロバイダー:</span>
              </div>
              <div class="w-2/3 flex items-center">
                <span class="text-gray-900"><%= @user.authentication_provider_name %></span>
                <% if @user.google_sso_user? %>
                  <svg class="w-4 h-4 ml-2 text-blue-600" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                    <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                    <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                    <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                  </svg>
                <% end %>
              </div>
            </div>
            <div class="flex">
              <div class="w-1/3">
                <span class="font-medium text-gray-700">プロバイダーID:</span>
              </div>
              <div class="w-2/3">
                <span class="text-gray-900"><%= @user.google_id || "未設定" %></span>
              </div>
            </div>
            <div class="flex">
              <div class="w-1/3">
                <span class="font-medium text-gray-700">登録日:</span>
              </div>
              <div class="w-2/3">
                <span class="text-gray-900"><%= @user.created_at.strftime("%Y年%m月%d日") if @user.created_at %></span>
              </div>
            </div>
          </div>
        </div>

        <!-- API キー管理カード -->
        <div class="bg-white shadow-md rounded-lg overflow-hidden">
          <div class="px-6 py-4 bg-gray-50 border-b border-gray-200 flex justify-between items-center">
            <h4 class="text-lg font-semibold text-gray-900">API キー管理</h4>
            <%#= link_to "API キー設定", show_keys_user_path, class: "text-sm bg-green-100 text-green-700 px-3 py-1 rounded-md hover:bg-green-200 transition-colors" %>
          </div>
          <div class="px-6 py-4">
            <p class="text-gray-600 mb-4">LLM サービスのAPI キーを管理します。</p>
            <div class="space-y-2">
              <% if @user.llm_api_keys&.any? %>
                <% @user.llm_api_keys.each do |api_key| %>
                  <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg border">
                    <div>
                      <h6 class="font-medium text-gray-900 mb-1"><%= api_key.llm_type.upcase %></h6>
                      <small class="text-gray-500">登録済み</small>
                    </div>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      設定済み
                    </span>
                  </div>
                <% end %>
              <% else %>
                <div class="p-4 bg-gray-50 rounded-lg border border-dashed border-gray-300">
                  <p class="text-gray-500 text-center mb-0">まだAPI キーが登録されていません。</p>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- サイドバー -->
      <div class="lg:col-span-1">
        <div class="bg-white shadow-md rounded-lg overflow-hidden">
          <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
            <h5 class="font-semibold text-gray-900">クイックアクション</h5>
          </div>
          <div class="px-6 py-4 space-y-3">
            <%#= link_to "API キー追加", show_keys_user_path, class: "w-full bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition-colors flex items-center justify-center" %>
            <%#= link_to "プロフィール編集", edit_user_profile_path, class: "w-full bg-gray-200 text-gray-700 px-4 py-2 rounded-md hover:bg-gray-300 transition-colors flex items-center justify-center" %>
            <% if @user.sso_user? %>
              <%= link_to "ログアウト", user_logout_path, method: :delete,
                          class: "w-full bg-red-100 text-red-700 px-4 py-2 rounded-md hover:bg-red-200 transition-colors flex items-center justify-center border border-red-300",
                          confirm: "ログアウトしますか？（#{@user.authentication_provider_name}アカウントからのログアウトオプションも表示されます）" %>
            <% else %>
              <%= link_to "ログアウト", user_logout_path, method: :delete,
                          class: "w-full bg-red-100 text-red-700 px-4 py-2 rounded-md hover:bg-red-200 transition-colors flex items-center justify-center border border-red-300",
                          confirm: "ログアウトしますか？" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <!-- ログインしていない場合 -->
    <div class="flex justify-center">
      <div class="w-full max-w-md">
        <div class="bg-white shadow-lg rounded-lg overflow-hidden">
          <div class="px-6 py-4 bg-gray-50 border-b border-gray-200 text-center">
            <h4 class="text-xl font-semibold text-gray-900">LLM API Meta Server</h4>
          </div>
          <div class="px-6 py-8 text-center">
            <h5 class="text-lg font-medium text-gray-900 mb-4">Welcome!</h5>
            <p class="text-gray-600 mb-6">Googleアカウントでログインして、LLM APIキーを管理しましょう。</p>
            <%= link_to "Googleでログイン", user_google_oauth2_omniauth_authorize_path,
                        class: "w-full bg-blue-600 text-white px-6 py-3 rounded-md hover:bg-blue-700 transition-colors flex items-center justify-center text-lg font-medium" do %>
              <svg class="w-4 h-4 mr-2" viewBox="0 0 24 24" fill="currentColor">
                <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
              </svg>
              Googleでログイン
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>