<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <% if user_signed_in? %>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Profile Information -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Profile Card -->
        <div class="bg-white shadow-md rounded-lg overflow-hidden">
          <div class="px-6 py-4 bg-gray-50 border-b border-gray-200 flex justify-between items-center">
            <h4 class="text-lg font-semibold text-gray-900">Profile</h4>
            <%#= link_to "Edit", edit_user_profile_path, class: "text-sm bg-blue-100 text-blue-700 px-3 py-1 rounded-md hover:bg-blue-200 transition-colors" %>
          </div>
          <div class="px-6 py-4 space-y-4">
            <div class="flex">
              <div class="w-1/3">
                <span class="font-medium text-gray-700">Email Address:</span>
              </div>
              <div class="w-2/3">
                <span class="text-gray-900"><%= @user.email %></span>
              </div>
            </div>
            <div class="flex">
              <div class="w-1/3">
                <span class="font-medium text-gray-700">Provider ID:</span>
              </div>
              <div class="w-2/3">
                <span class="text-gray-900"><%= @user.google_id %></span>
              </div>
            </div>
            <div class="flex">
              <div class="w-1/3">
                <span class="font-medium text-gray-700">Registration Date:</span>
              </div>
              <div class="w-2/3">
                <span class="text-gray-900"><%= @user.created_at.strftime("%B %d, %Y") %></span>
              </div>
            </div>
          </div>
        </div>
        <!-- API Key Management Card -->
        <div class="bg-white shadow-md rounded-lg overflow-hidden">
          <div class="px-6 py-4 bg-gray-50 border-b border-gray-200 flex justify-between items-center">
            <h4 class="text-lg font-semibold text-gray-900">LLM API Key Management</h4>
            <%= link_to "Manage API Keys", user_llm_api_keys_path(@user), class: "text-sm bg-yellow-100 text-yellow-700 px-3 py-1 rounded-md hover:bg-yellow-200 transition-colors" %>
          </div>
          <div class="px-6 py-4">
            <p class="text-gray-600 mb-4">Manage your LLM service API keys.</p>
            <p class="text-gray-600"><% if @user.llm_api_keys.any? %><%= @user.llm_api_keys.count %> <% else %>No <% end %>API <% if @user.llm_api_keys.count == 1 %>Key is <% else %>Keys are <% end %> registered.</p>
          </div>
        </div>
      </div>
      <!-- Sidebar -->
<!--      <div class="lg:col-span-1">-->
<!--        <div class="bg-white shadow-md rounded-lg overflow-hidden">-->
<!--          <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">-->
<!--            <h5 class="font-semibold text-gray-900">Quick Actions</h5>-->
<!--          </div>-->
<!--          <div class="px-6 py-4 space-y-3">-->
            <%#= form_with url: user_llm_api_keys_path(@user), method: :post, local: true, class: "w-full", data: { turbo: false } do |form| %>
              <%#= button_tag type: "submit", class: "w-full bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition-colors flex items-center justify-center" do %>
<!--                <i class="fa-solid fa-key"></i> Add API Key-->
              <%# end %>
            <%# end %>
            <%#= link_to "Manage LLM API Keys", user_llm_api_keys_path(@user), class: "w-full bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition-colors flex items-center justify-center" %>
            <%#= link_to "Edit Profile", edit_user_profile_path, class: "w-full bg-gray-200 text-gray-700 px-4 py-2 rounded-md hover:bg-gray-300 transition-colors flex items-center justify-center" %>
            <%#= link_to "Logout", user_logout_path, method: :delete,
                        class: "w-full bg-red-100 text-red-700 px-4 py-2 rounded-md hover:bg-red-200 transition-colors flex items-center justify-center border border-red-300",
                        confirm: "Are you sure you want to logout? (Logout options for your Google account will also be displayed)" %>
<!--          </div>-->
<!--        </div>-->
<!--      </div>-->
    </div>
  <% end %>
</div>
