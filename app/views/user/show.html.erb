<div class="container mt-4">
  <% if user_signed_in? %>
    <div class="row">
      <div class="col-md-8">
        <div class="card">
          <div class="card-header d-flex justify-content-between align-items-center">
            <h4>プロフィール</h4>
            <%= link_to "編集", edit_user_profile_path, class: "btn btn-outline-primary btn-sm" %>
          </div>
          <div class="card-body">
            <div class="row mb-3">
              <div class="col-sm-3">
                <strong>メールアドレス:</strong>
              </div>
              <div class="col-sm-9">
                <%= @user.email %>
              </div>
            </div>
            <div class="row mb-3">
              <div class="col-sm-3">
                <strong>Google ID:</strong>
              </div>
              <div class="col-sm-9">
                <%= @user.google_id || "未設定" %>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-3">
                <strong>登録日:</strong>
              </div>
              <div class="col-sm-9">
                <%= @user.created_at.strftime("%Y年%m月%d日") if @user.created_at %>
              </div>
            </div>
          </div>
        </div>

        <div class="card mt-4">
          <div class="card-header d-flex justify-content-between align-items-center">
            <h4>API キー管理</h4>
            <%= link_to "API キー設定", show_keys_user_path, class: "btn btn-outline-success btn-sm" %>
          </div>
          <div class="card-body">
            <p>LLM サービスのAPI キーを管理します。</p>
            <div class="row">
              <div class="col-md-6">
                <div class="list-group">
                  <% if @user.llm_api_keys&.any? %>
                    <% @user.llm_api_keys.each do |api_key| %>
                      <div class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                          <h6 class="mb-1"><%= api_key.llm_type.upcase %></h6>
                          <small class="text-muted">登録済み</small>
                        </div>
                        <span class="badge bg-success rounded-pill">設定済み</span>
                      </div>
                    <% end %>
                  <% else %>
                    <div class="list-group-item">
                      <p class="text-muted mb-0">まだAPI キーが登録されていません。</p>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="card">
          <div class="card-header">
            <h5>クイックアクション</h5>
          </div>
          <div class="card-body">
            <div class="d-grid gap-2">
              <%= link_to "API キー追加", show_keys_user_path, class: "btn btn-primary" %>
              <%= link_to "プロフィール編集", edit_user_profile_path, class: "btn btn-outline-secondary" %>
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete,
                          class: "btn btn-outline-danger",
                          confirm: "ログアウトしますか？" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card">
          <div class="card-header text-center">
            <h4>LLM API Meta Server</h4>
          </div>
          <div class="card-body text-center">
            <h5>Welcome!</h5>
            <p>Googleアカウントでログインして、LLM APIキーを管理しましょう。</p>
            <%= link_to "Googleでログイン", user_google_oauth2_omniauth_authorize_path, class: "btn btn-primary btn-lg" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>